@page
@model ExwhyzeeTechnology.Website.Areas.Admin.Pages.ICourse.IAssignment.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title text-uppercase">
            NEW ASSIGNMENT
        </h3>
        <a asp-page="/ICourse/IActivities/ActivityDetails" asp-route-id="@Model.DialyActivity.Id" class="btn bg-gradient-warning btn-sm" style="float:right;">Bact to Activity</a>

    </div>

    <div class="card-body">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Assignment.DialyActivityId" value="@Model.DialyActivity.Id" />

                        <div class="form-group">
                            <label asp-for="Assignment.Title" class="control-label"></label>
                            <input asp-for="Assignment.Title" class="form-control" />
                            <span asp-validation-for="Assignment.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Assignment.Question" class="control-label"></label>
                            <textarea asp-for="Assignment.Question" class="form-control summernote"></textarea>
                            <span asp-validation-for="Assignment.Question" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Upload file, image, doc etc</label><br />
                            <input type="file" class="control-label" asp-for="imagefile"  />
                        </div>
                        <div class="form-group">
                            <label asp-for="Assignment.Date" class="control-label"></label>
                            <input asp-for="Assignment.Date" class="form-control" />
                            <span asp-validation-for="Assignment.Date" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Assignment.LastSubmissionDate" class="control-label">Last Submission Date</label>
                            <input asp-for="Assignment.LastSubmissionDate" class="form-control" />
                            <span asp-validation-for="Assignment.LastSubmissionDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create Assignment" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
