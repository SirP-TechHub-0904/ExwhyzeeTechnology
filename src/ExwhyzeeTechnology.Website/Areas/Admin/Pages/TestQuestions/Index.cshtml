@page
@model RazorWebUI.Areas.ITrainings.Pages.TestQuestions.IndexModel
@{
    ViewData["Title"] = $"TEST QUESTIONS";

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">MANAGE TRAININGS QUESTIONS</h3>


        <a asp-page="./Add" class="btn bg-gradient-warning btn-sm" style="float:right;">New Question</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div style=" box-shadow: 0px 10px 20px 0px rgb(50 50 50 / 83%);padding:10px;">


            <h3>PRE TEST</h3>
            <div class="table-responsive">
                <table id="" class="example-table table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Question
                            </th>

                            <th>Publish</th>
                            <th>Type</th>

                            <th>SortOrder</th>


                        </tr>
                    </thead>

                    @{
                        int sn = 0;
                    }
                    <tbody>
                        @foreach (var item in Model.Datas.Where(x => x.TrainingTestType == ExwhyzeeTechnology.Domain.Enum.Enum.TrainingTestType.PreTest).OrderBy(x => x.SortOrder))
                        {
                            <tr>

                                <td>
                                    @{
                                        sn++;
                                    }
                                    @sn
                                </td>
                                <td>
                                    <a asp-page="./Update" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Question)

                                    </a>
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Publish)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrainingTestType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SortOrder)
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td colspan="4">
                                    <a asp-page="./AddOption" asp-route-id="@item.Id" class="btn btn-primary">Add Option</a>
                                    <table>
                                        <tr>
                                            <th>Order</th>
                                            <th>Option</th>
                                            <th>Correct Answer</th>
                                        </tr>
                                        @foreach (var list in item.TrainingTestOptions)
                                        {
                                            <tr>
                                                <td>@list.SortOrder</td>
                                                <td><a asp-page="./UpdateOption" asp-route-id="@list.Id">@list.Option</a></td>
                                                <td>@list.CorrectAnswer @if(list.CorrectAnswer == true){ <span><i class="fas fa-check" style="color:green;"></i></span>}</td>
                                            </tr>
                                        }
                                    </table>
                                </td> 

                            </tr>
                           
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div style=" box-shadow: 0px 10px 20px 0px rgb(50 50 50 / 83%);padding:10px;">


            <h3>POST TEST</h3>
            <div class="table-responsive">
                <table id="" class="example-table table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Question
                            </th> 
                            <th>Publish</th>
                            <th>Type</th>

                            <th>SortOrder</th>


                        </tr>
                    </thead>

                    @{
                        int xsn = 0;
                    }
                <tbody>
                    @foreach (var item in Model.Datas.Where(x => x.TrainingTestType == ExwhyzeeTechnology.Domain.Enum.Enum.TrainingTestType.PostTest).OrderBy(x => x.SortOrder))
                    {
                        <tr>

                            <td>
                                @{
                                    xsn++;
                                }
                                @xsn
                            </td>
                            <td>
                                <a asp-page="./Update" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Question)

                                </a>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Publish)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrainingTestType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SortOrder)
                            </td>



                        </tr>
                        <tr>
                            <td></td>
                            <td colspan="4">
                                <a asp-page="./AddOption" asp-route-id="@item.Id" class="btn btn-primary">Add Option</a>
                                <table>
                                    <tr>
                                        <th>Order</th>
                                        <th>Option</th>
                                        <th>Correct Answer</th>
                                    </tr>
                                    @foreach (var list in item.TrainingTestOptions)
                                    {
                                        <tr>
                                            <td>@list.SortOrder</td>
                                            <td><a asp-page="./UpdateOption" asp-route-id="@list.Id">@list.Option</a></td>
                                            <td>@list.CorrectAnswer @if (list.CorrectAnswer == true)
                                            {<span><i class="fas fa-check" style="color:green;"></i></span>}</td>
                                        </tr>
                                    }
                                </table>
                            </td>

                        </tr>
                    }
                </tbody>
                </table>
            </div>
        </div>
    </div>
</div>