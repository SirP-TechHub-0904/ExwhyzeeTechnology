@page
@model ExwhyzeeTechnology.Website.Areas.Admin.Pages.UserManagement.AdmissionStatusModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">PARTICIPANT COURSE STATUS</h3>
        <a asp-page="./Index" class="btn bg-gradient-primary btn-sm" style="float:right;">Back to List</a>
        <a asp-page="./Add" class="btn bg-gradient-warning btn-sm" style="float:right;">Register New Account</a>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Participant.User.FullnameX)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Participant.User.FullnameX)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Participant.User.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Participant.User.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Participant.User.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Participant.User.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        Reg. No.
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Participant.IdNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Participant.User.Role)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Participant.User.Role)
                    </dd>
                    <dt class="col-sm-2">
                        Registered Date
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Participant.User.Date.ToString("dd MMM, yyyy")
                    </dd>
                    <dt class="col-sm-2">
                        Course
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Participant.Cohort.Course.Name (@Model.Participant.Cohort.Course.Abbreviation)
                    </dd>

                    <dt class="col-sm-2">
                        Registration Completion Link
                    </dt>
                    <dd class="col-sm-10">
                        Email Sent

                        @if (Model.Participant.User.EmailSent == true)
                        {
                            <span>
                                (<i class="fa fa-check"></i>)
                            </span>


                        }
                        else
                        {

                            <span>
                                (<i class="fa fa-times"></i>)
                            </span>

                        }
                    <form method="post">
                        <input asp-for="UserId" type="hidden" value="@Model.Participant.UserId" />
                        <input asp-for="ParticipantId" type="hidden" value="@Model.Participant.Id" />
                        <input asp-for="Letter" type="hidden"/>
                        <input asp-for="SendEmail" type="hidden" value="true" />
                        <button type="submit" class="btn btn-primary btn-xs">Send Admission Letter Via Email</button>
                    </form>
                        <br /> SMS Sent
                        @if (Model.Participant.User.SmsSent == true)
                        {
                            <span>
                                (<i class="fa fa-check"></i>)
                            </span>
                        }
                        else
                        {
                            <span>
                                (<i class="fa fa-times"></i>)
                            </span>

                        }
                        <form method="post">
                            <input asp-for="UserId" type="hidden" value="@Model.Participant.UserId" />
                            <input asp-for="ParticipantId" type="hidden" value="@Model.Participant.Id" />

                            <input asp-for="SendSMS" type="hidden" value="true" />
                            <button type="submit" class="btn btn-primary btn-xs">Resend SMS</button>
                        </form>
                    </dd>
                    

                    <dt class="col-sm-2">
                        Last Time Login
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Participant.User.LastLogin
                    </dd>
                </dl>
            </div>
            <div class="col-md-12">
                @Html.Raw(Model.Letter)
            </div>
        </div>
    </div>
</div>