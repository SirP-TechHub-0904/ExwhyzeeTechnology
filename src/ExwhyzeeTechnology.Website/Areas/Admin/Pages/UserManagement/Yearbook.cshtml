@page
@model ExwhyzeeTechnology.Website.Areas.Admin.Pages.UserManagement.YearbookModel
@{
}
@{
    ViewData["Title"] = $"YEAR BOOK";

}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <h3>YEAR BOOK</h3>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>
                                    Course
                                </th>

                                <th></th>
                                 
                            </tr>
                        </thead>

                        @{
                            int sn = 0;
                        }
                        <tbody>
                            @foreach (var item in Model.GroupedCourses)
                            {
                                <tr>

                                    <td>
                                        @{
                                            sn++;
                                        }
                                        @sn
                                    </td>
                                    <td>
                                        @item.Value
                                    </td>
                                    <td>
                                        <a asp-page="./YearbookDetails" asp-route-id="@item.Key" class="btn btn-primary">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

             

        </div>
    </div>
</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     

}
