@section MainStyle {
    <style>
        .form-control {
            display: block;
            width: 100%;
            padding: .375rem .75rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border-radius: .375rem;
            transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }


        .c-train i {
            margin-left: 20px;
            font-size: 20px;
            font-weight: 900;
        }

        .c-train .accordion-button:not(.collapsed)::after {
            display: none;
        }

        .accordion-button::after {
            display: none;
        }

        .c-train .box-active {
            border: 1px solid #09054c !important;
            background: #fff !important;
            box-shadow: 0px 5px 50px 0px rgb(9 5 76) !important;
        }

        .accordion .accordion-button {
            background-color: beige;
            font-weight: 500;
            font-size: 15px;
            color: #23244a;
            text-transform: uppercase;
            border: 1px solid #06044bab;
        }

        textarea.form-control {
            height: 50px;
        }

        .box-3-mc {
            margin: 10px;
        }
    </style>
}

